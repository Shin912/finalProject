<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
  <!-- main layout -->
  <definition name="layout-tiles" template="/WEB-INF/views/tiles/tiles-layout.jsp">
    <put-attribute name="header" value="/WEB-INF/views/tiles/headerTemplate.jsp" />
    <put-attribute name="left" value="/WEB-INF/views/tiles/sidebarTemplate.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/tiles/footerTemplate.jsp" />
  </definition>
  
  <definition name="*/*" extends="layout-tiles">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
  </definition>
  
  <!-- no layout -->
  <definition name="No-layout-tiles" template="">
    <put-attribute name="login" value="/WEB-INF/views/login_etc/login.jsp" />
    <put-attribute name="signup" value="/WEB-INF/views/login_etc/signup.jsp" />
  </definition>
</tiles-definitions>